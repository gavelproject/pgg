<?xml version="1.0" encoding="UTF-8"?>

<regulative-spec
	xmlns="https://github.com/gavelproject/gavel"
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' 
	xsi:schemaLocation="https://github.com/gavelproject/gavel
	https://raw.githubusercontent.com/gavelproject/gavel/master/src/main/resources/xsd/regulative-spec.xsd">
	
	<norms>
		<norm id="n1">
			<activation>current_round(Round) &amp; pool_member(Player,Round)</activation>
			<issuer>manager</issuer>
			<target>Player</target>
			<deactivation>false</deactivation>
			<deadline>current_round(Round+1)</deadline>
			<content>obligation(contributed(Player,Round))</content>
		</norm>
	</norms>
	<sanctions>
        <sanction id="punishment">
            <condition>cost_to_punish(C) &amp; tokens(T) &amp; C &lt;= T</condition>
            <category>
                <purpose>punishment</purpose>
                <issuer>formal</issuer>
                <locus>other_directed</locus>
                <mode>direct</mode>
                <polarity>negative</polarity>
                <discernability>noticeable</discernability>
            </category>
            <content>punish(Target)</content>
        </sanction>
        <sanction id="gossip">
            <condition>
            	.my_name(Me) &amp; 
            	player(P) &amp; 
            	P \== Me &amp; 
            	not pool_member(_,P)</condition>
            <category>
                <purpose>punishment</purpose>
                <issuer>informal</issuer>
                <locus>other_directed</locus>
                <mode>direct</mode>
                <polarity>negative</polarity>
                <discernability>unnoticeable</discernability>
            </category>
            <content>gossip(P,Target)</content>
        </sanction>
    </sanctions>
	<ns-links>
		<ns-link status="enabled">
			<nid>n1</nid>
			<sid>s1</sid>
		</ns-link>
	</ns-links>
</regulative-spec>